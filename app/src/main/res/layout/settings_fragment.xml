<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Report Forwarding:  "
        android:id="@+id/report_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Forward your data to dieticians, physicians, and others!"
        android:id="@+id/report_subtitle"

        android:layout_alignTop="@+id/report_title"
        android:layout_toRightOf="@+id/report_title"
        android:layout_toEndOf="@+id/report_title"
        android:layout_marginRight="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"

        android:id="@+id/email1"
        android:layout_below="@+id/report_subtitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"

        android:id="@+id/email2"
        android:layout_below="@+id/email1"
        android:layout_alignLeft="@+id/email1"
        android:layout_alignStart="@+id/email1"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email3"
        android:hint="Email"

        android:layout_below="@+id/email2"
        android:layout_alignLeft="@+id/email2"
        android:layout_alignStart="@+id/email2"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"
        android:id="@+id/email4"
        android:layout_below="@+id/email3"
        android:layout_alignLeft="@+id/email3"
        android:layout_alignStart="@+id/email3"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="Email"

        android:id="@+id/email5"
        android:layout_below="@+id/email4"
        android:layout_alignLeft="@+id/email4"
        android:layout_alignStart="@+id/email4"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Forward!"
        android:textColor="#fff"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/button"
        android:layout_below="@+id/email5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/progressBar2"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_alignBottom="@+id/button"
        android:layout_alignRight="@+id/report_title"
        android:layout_alignEnd="@+id/report_title"
        android:layout_marginBottom="9dp" />
</RelativeLayout>